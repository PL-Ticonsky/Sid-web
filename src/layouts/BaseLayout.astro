---
import Navbar from "../components/Navbar.astro";
import "../styles/global.css";

const { title = "SID" } = Astro.props;
---

<html lang="es">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <title>{title}</title>

    <link rel="icon" type="image/png" href="/favicon.png" />
  </head>

  <body class="font-montserrat text-sid-navy bg-white">
    <Navbar />

    <main class="max-w-6xl mx-auto px-6 py-12">
      <slot />
    </main>

    <footer class="border-t mt-20 py-8 text-center text-sm text-gray-500">
      © {new Date().getFullYear()} Sociedad de Innovación y Desarrollo · Developed by Ticonsky
    </footer>
  </body>
</html>
