---
import BaseLayout from "../layouts/BaseLayout.astro";
import site from "../data/site.json";

const BASE = import.meta.env.BASE_URL;

const gallery = [
  `${BASE}images/activities/carrusel.webp`,
  `${BASE}images/activities/carrusel1.webp`,
  `${BASE}images/activities/carrusel6.webp`,
  `${BASE}images/activities/carrusel3.webp`,
];

const whatWeDo = [
  {
    title: "Formación estructurada",
    desc: "Cursos claros, prácticos y documentados para construir bases sólidas.",
    href: `${BASE}courses/`,
    tag: "Cursos",
  },
  {
    title: "Actividades aplicadas",
    desc: "Hackatones, maratones y dinámicas para convertir teoría en práctica.",
    href: `${BASE}activities/`,
    tag: "Actividades",
  },
  {
    title: "Proyectos con entregables",
    desc: "Construimos artefactos reales: guías, repos, prototipos y demos.",
    href: `${BASE}activities/`,
    tag: "Proyectos",
  },
  {
    title: "Comunidad y acompañamiento",
    desc: "Trabajo colaborativo, pares mentores y cultura de mejora continua.",
    href: site.joinUrl,
    external: true,
    tag: "Comunidad",
  },
];

const principles = [
  {
    title: "Misión",
    desc: "Fortalecer la formación con aprendizaje aplicado, colaboración y entregables documentados.",
    href: site.joinUrl,
    external: true,
  },
  {
    title: "Visión",
    desc: "Ser referente estudiantil en innovación y desarrollo en la Universidad Distrital, con cultura de calidad.",
    href: site.joinUrl,
    external: true,
  },
  {
    title: "Líneas de trabajo",
    desc: "Actividades prácticas + cursos + acompañamiento entre pares para crecer con método.",
    href: `${BASE}activities/`,
  },
  {
    title: "Principios",
    desc: "Rigor académico, transparencia, colaboración e impacto. Resultados verificables y comunicación clara.",
    href: site.joinUrl,
    external: true,
  },
];
---

<BaseLayout title="SID · Inicio">
  <!-- Fondo suave general -->
  <div class="absolute inset-0 -z-10">
    <div class="pointer-events-none absolute inset-0 bg-gradient-to-b from-slate-50 via-white to-white"></div>
    <div class="pointer-events-none absolute -top-24 left-1/2 h-72 w-[42rem] -translate-x-1/2 rounded-full bg-sid-cyan/20 blur-3xl"></div>
    <div class="pointer-events-none absolute top-36 right-[-6rem] h-64 w-64 rounded-full bg-sid-pink/15 blur-3xl"></div>
  </div>

  <!-- HERO -->
  <section class="py-14 md:py-20">
    <div class="grid items-center gap-10 md:grid-cols-2">
      <!-- Copy -->
      <div class="space-y-6">
        <div class="inline-flex items-center gap-2 rounded-full border border-gray-200 bg-white/70 px-3 py-1 text-xs font-semibold text-sid-navy backdrop-blur">
          <span class="inline-block h-2 w-2 rounded-full bg-sid-pink"></span>
          Universidad Distrital · Comunidad estudiantil
        </div>

        <h1 class="font-poppins text-4xl leading-tight text-sid-navy md:text-5xl">
          Sociedad de Innovación y Desarrollo
        </h1>

        <p class="max-w-xl text-slate-700 leading-relaxed">
          Formación aplicada, experimentación responsable y proyectos con impacto académico y social.
          Aquí la teoría se convierte en entregables reales.
        </p>

        <ul class="grid gap-2 text-sm text-slate-700">
          <li class="flex gap-2">
            <span class="mt-1 inline-block h-2 w-2 rounded-full bg-sid-cyan"></span>
            Cursos con ruta clara y documentación.
          </li>
          <li class="flex gap-2">
            <span class="mt-1 inline-block h-2 w-2 rounded-full bg-sid-purple"></span>
            Actividades prácticas (hackatones, maratones, integración).
          </li>
          <li class="flex gap-2">
            <span class="mt-1 inline-block h-2 w-2 rounded-full bg-sid-pink"></span>
            Comunidad para construir proyectos en serio.
          </li>
        </ul>

        <!-- CTAs (menos ruido) -->
        <div class="flex flex-col gap-3 sm:flex-row sm:items-center">
          <a
            href={site.joinUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center rounded-xl bg-sid-pink px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:opacity-90 hover:shadow-md"
          >
            Únete
          </a>

          <a
            href={`${BASE}activities/`}
            class="inline-flex items-center justify-center rounded-xl border border-gray-200 bg-white/70 px-6 py-3 text-sm font-semibold text-sid-navy backdrop-blur transition hover:bg-white hover:shadow-sm"
          >
            Explorar actividades
          </a>
        </div>

        <!-- links secundarios -->
        <div class="flex flex-wrap gap-x-4 gap-y-2 text-sm font-semibold text-sid-navy">
          <a href={`${BASE}courses/`} class="hover:underline underline-offset-4">Ver cursos</a>
          <a href={`${BASE}team/`} class="hover:underline underline-offset-4">Ver integrantes</a>
        </div>
      </div>

          <div class="relative overflow-hidden rounded-[2rem] border border-gray-200 bg-white/70 p-6 backdrop-blur">
            <!-- marco de imagen -->
            <div class="grid place-items-center rounded-2xl bg-gradient-to-b from-white to-slate-50 p-6">
              <div class="aspect-square w-full max-w-[320px] grid place-items-center">
                <img
                  src={`${BASE}images/brand/Logo.webp`}
                  alt="Pacha, mascota oficial de SID"
                  class="block h-full w-full object-contain"
                  loading="eager"
                />
              </div>
            </div>
          
            <div class="mt-4 space-y-1">
              <div class="font-poppins text-base font-semibold text-sid-navy">Pacha</div>
              <p class="text-sm text-slate-600">
                Guardián de ideas: curiosidad, creatividad y valentía para construir.
              </p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>


<section class="py-12 space-y-6">
  <div class="flex flex-wrap items-end justify-between gap-4">
    <div class="space-y-2">
      <h2 class="font-poppins text-3xl text-sid-navy">Galería</h2>
      <p class="max-w-2xl text-slate-700">
        Evidencia de actividades, trabajo en equipo y comunidad.
      </p>
    </div>

    <a
      href={`${BASE}activities/`}
      class="inline-flex items-center justify-center rounded-xl border border-gray-200 bg-white/70 px-5 py-2.5 text-sm font-semibold text-sid-navy backdrop-blur transition hover:bg-white hover:shadow-sm"
    >
      Ver actividades →
    </a>
  </div>

  <!-- REEMPLAZA DESDE AQUÍ -->
  <div class="grid gap-4 lg:grid-cols-12 lg:items-stretch">
    <!-- Grande (se estira para igualar la columna derecha) -->
    <div class="group relative overflow-hidden rounded-3xl border border-gray-200 bg-gray-100 lg:col-span-8 h-full min-h-[420px]">
      <img
        src={gallery[0]}
        alt="Galería SID"
        class="absolute inset-0 h-full w-full object-cover object-center transition duration-300 group-hover:scale-[1.03]"
        loading="eager"
        decoding="async"
      />

      <div class="pointer-events-none absolute inset-0 bg-gradient-to-t from-black/40 via-black/10 to-transparent"></div>

      <div class="absolute bottom-4 left-4">
        <div class="inline-flex items-center gap-2 rounded-full bg-white/85 px-3 py-1 text-xs font-semibold text-sid-navy backdrop-blur">
          <span class="inline-block h-2 w-2 rounded-full bg-sid-cyan"></span>
          Actividades SID
        </div>
      </div>
    </div>

    <!-- 3 pequeñas -->
    <div class="grid gap-4 lg:col-span-4">
      {gallery.slice(1, 4).map((src) => (
        <div class="group relative overflow-hidden rounded-2xl border border-gray-200 bg-gray-100">
          <div class="relative aspect-[16/10] w-full">
            <img
              src={src}
              alt="Galería SID"
              class="absolute inset-0 h-full w-full object-cover object-center transition duration-300 group-hover:scale-[1.04]"
              loading="lazy"
              decoding="async"
            />
          </div>
        </div>
      ))}
    </div>
  </div>



  <!-- QUÉ HACEMOS -->
  <section class="py-10">
    <header class="mb-6 space-y-2">
      <h2 class="font-poppins text-3xl text-sid-navy">¿Qué hacemos?</h2>
      <p class="max-w-2xl text-slate-700">
        No vendemos humo: organizamos práctica guiada, formación y construcción de entregables.
      </p>
    </header>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {whatWeDo.map((c) => (
        <a
          href={c.href}
          target={c.external ? "_blank" : undefined}
          rel={c.external ? "noopener noreferrer" : undefined}
          class="group block rounded-2xl border border-gray-200 bg-white/70 p-6 backdrop-blur transition hover:-translate-y-0.5 hover:shadow-md"
        >
          <div class="mb-3 inline-flex items-center gap-2 rounded-full border border-gray-200 bg-white px-3 py-1 text-xs font-semibold text-sid-navy opacity-70 transition group-hover:opacity-100">
            <span class="inline-block h-2 w-2 rounded-full bg-sid-pink"></span>
            {c.tag}
          </div>

          <div class="font-poppins text-lg font-semibold text-sid-navy">{c.title}</div>
          <p class="mt-2 text-sm leading-relaxed text-slate-700">{c.desc}</p>

          <div class="mt-4 text-sm font-semibold text-sid-blue transition group-hover:translate-x-0.5">
            Explorar →
          </div>
        </a>
      ))}
    </div>
  </section>

  <!-- CÓMO FUNCIONA -->
  <section class="py-12">
    <div class="rounded-3xl border border-gray-200 bg-white/70 p-8 backdrop-blur md:p-12">
      <div class="grid gap-10 md:grid-cols-2 md:items-center">
        <div class="space-y-3">
          <h2 class="font-poppins text-3xl text-sid-navy">Cómo funciona SID</h2>
          <p class="text-slate-700 leading-relaxed">
            Entrar debe ser simple: te unes, eliges una línea (cursos/actividades) y empiezas a construir con guía y documentación.
          </p>
        </div>

        <ol class="grid gap-4">
          {[
            { n: "01", t: "Postúlate", d: "Completa el formulario de Únete." },
            { n: "02", t: "Elige tu ruta", d: "Cursos, actividades o apoyo en proyectos." },
            { n: "03", t: "Construye", d: "Entregables reales: repos, guías, prototipos." },
          ].map((s) => (
            <li class="flex gap-4 rounded-2xl border border-gray-200 bg-white p-5">
              <div class="font-poppins text-sm font-semibold text-sid-navy">{s.n}</div>
              <div>
                <div class="font-poppins font-semibold text-sid-navy">{s.t}</div>
                <div class="mt-1 text-sm text-slate-600">{s.d}</div>
              </div>
            </li>
          ))}
        </ol>
      </div>

      <div class="mt-8 flex flex-wrap gap-3">
        <a
          href={site.joinUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center rounded-xl bg-sid-pink px-6 py-3 text-sm font-semibold text-white shadow-sm transition hover:opacity-90 hover:shadow-md"
        >
          Únete
        </a>

        <a
          href={`${BASE}activities/`}
          class="inline-flex items-center justify-center rounded-xl border border-gray-200 bg-white px-6 py-3 text-sm font-semibold text-sid-navy transition hover:bg-gray-50"
        >
          Explorar actividades
        </a>
      </div>
    </div>
  </section>

  <!-- MISIÓN Y VISIÓN -->
  <section class="py-10 space-y-6">
    <h2 class="font-poppins text-3xl text-sid-navy">Misión y visión</h2>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {principles.map((c) => (
        <a
          href={c.href}
          target={c.external ? "_blank" : undefined}
          rel={c.external ? "noopener noreferrer" : undefined}
          class="block rounded-2xl border border-gray-200 bg-white/70 p-6 backdrop-blur transition hover:-translate-y-0.5 hover:shadow-md"
        >
          <div class="font-poppins font-semibold text-lg text-sid-navy">{c.title}</div>
          <p class="mt-2 text-sm leading-relaxed text-slate-700">{c.desc}</p>
        </a>
      ))}
    </div>
  </section>

  <!-- CTA FINAL -->
  <section class="py-12">
    <div class="relative overflow-hidden rounded-3xl border border-gray-200 bg-sid-navy px-8 py-10 md:px-12">
      <div class="pointer-events-none absolute -top-24 right-0 h-72 w-72 rounded-full bg-sid-cyan/25 blur-3xl"></div>
      <div class="pointer-events-none absolute -bottom-24 left-0 h-72 w-72 rounded-full bg-sid-pink/20 blur-3xl"></div>

      <div class="relative grid gap-6 md:grid-cols-2 md:items-center">
        <div class="space-y-3">
          <h2 class="font-poppins text-3xl text-white">¿Listo para construir algo real?</h2>
          <p class="max-w-xl text-white/80 leading-relaxed">
            Únete a SID y elige tu ruta: formación, actividades prácticas o proyectos con entregables.
          </p>
        </div>

        <div class="flex flex-wrap gap-3 md:justify-end">
          <a
            href={site.joinUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-flex items-center justify-center rounded-xl bg-sid-pink px-6 py-3 text-sm font-semibold text-white transition hover:opacity-90"
          >
            Únete
          </a>
          <a
            href={`${BASE}courses/`}
            class="inline-flex items-center justify-center rounded-xl border border-white/25 bg-white/10 px-6 py-3 text-sm font-semibold text-white backdrop-blur transition hover:bg-white/15"
          >
            Ver cursos
          </a>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
