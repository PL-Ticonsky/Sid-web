---
import BaseLayout from "../layouts/BaseLayout.astro";
import site from "../data/site.json";

const gallery = [
  "/images/activities/demo.webp",
  "/images/activities/demo.webp",
  "/images/activities/demo.webp",
  "/images/activities/demo.webp",
];

const resources = [
  { label: "Repositorio del grupo (GitHub)", url: "https://github.com/" },
  { label: "Guía de contribución", url: "https://github.com/" },
  { label: "Recursos curados (documentación)", url: "https://docs.astro.build/" },
];

const roadmap = [
  { module: "Módulo 1", topics: ["Tema A", "Tema B"] },
  { module: "Módulo 2", topics: ["Tema C"] },
];
---

<BaseLayout title="SID · Inicio">
  <!-- HERO -->
   <section class="py-16">
  <div class="grid md:grid-cols-2 items-center gap-10">

    <!-- Texto -->
    <div>
      <h1 class="font-poppins text-4xl md:text-5xl text-sid-navy">
        Sociedad de Innovación y Desarrollo
      </h1>

      <p class="mt-4 text-slate-700 leading-relaxed max-w-xl">
        Comunidad estudiantil orientada a la formación, experimentación y construcción de soluciones con impacto.
      </p>

      <div class="mt-6 flex gap-3">
        <a href={site.joinUrl}
           class="bg-sid-pink px-5 py-2.5 rounded-xl text-white font-semibold">
          Únete
        </a>
      </div>
    </div>

    <!-- Pacha -->
    <div class="flex justify-center md:justify-end">
      <img
        src="/images/brand/pacha.webp"
        alt="Pacha - Mascota SID"
        class="w-64 md:w-80 drop-shadow-xl"
      />
    </div>

  </div>
</section>

  <section class="py-10">
    <div class="rounded-3xl border border-gray-200 bg-white p-8 md:p-12">
      <h1 class="font-poppins text-4xl md:text-5xl leading-tight text-sid-navy">
        Sociedad de Innovación y Desarrollo
      </h1>

      <p class="mt-4 max-w-2xl text-slate-700 leading-relaxed">
        Poner aqui el texto que se desee xDDD
      </p>

      <div class="mt-7 flex flex-wrap gap-3">
        <a
          href={site.joinUrl}
          target="_blank"
          rel="noopener noreferrer"
          class="inline-flex items-center justify-center rounded-xl bg-sid-pink px-5 py-2.5 text-sm font-semibold text-white hover:opacity-90 transition"
        >
          Únete
        </a>

        <a
          href="/activities"
          class="inline-flex items-center justify-center rounded-xl border border-gray-200 px-5 py-2.5 text-sm font-semibold text-sid-navy hover:bg-gray-50 transition"
        >
          Ver actividades
        </a>

        <a
          href="/courses"
          class="inline-flex items-center justify-center rounded-xl border border-gray-200 px-5 py-2.5 text-sm font-semibold text-sid-navy hover:bg-gray-50 transition"
        >
          Ver cursos
        </a>
      </div>
    </div>
  </section>

  <!-- QUÉ HACEMOS -->
  <section class="py-10 space-y-6">
    <h2 class="font-poppins text-2xl text-sid-navy">¿Qué hacemos?</h2>

    <div class="grid gap-6 sm:grid-cols-2 lg:grid-cols-4">
      {[
        { title: "Actividades", desc: "Hackatones, dinámicas y retos prácticos.", href: "/activities" },
        { title: "Cursos", desc: "Formación estructurada con recursos y temario.", href: "/courses" },
        { title: "Comunidad", desc: "Aprendizaje colaborativo y acompañamiento.", href: site.joinUrl, external: true },
        { title: "Recursos", desc: "Material libre y curado para estudiar.", href: "#recursos" },
      ].map((c) => (
        <a
          href={c.href}
          target={c.external ? "_blank" : undefined}
          rel={c.external ? "noopener noreferrer" : undefined}
          class="block rounded-2xl border border-gray-200 bg-white p-6 hover:shadow-md transition"
        >
          <div class="font-poppins font-semibold text-lg text-sid-navy">{c.title}</div>
          <p class="mt-2 text-sm leading-relaxed text-slate-700">{c.desc}</p>
          <div class="mt-4 text-sm font-semibold text-sid-blue">Explorar →</div>
        </a>
      ))}
    </div>
  </section>

  <!-- GALERÍA (scroll horizontal tipo carrusel simple) -->
  <section class="py-10 space-y-6">
    <h2 class="font-poppins text-2xl text-sid-navy">Galería</h2>

    <div class="flex gap-4 overflow-x-auto snap-x snap-mandatory pb-2">
      {gallery.map((src) => (
        <div class="snap-start min-w-[280px] sm:min-w-[360px] overflow-hidden rounded-2xl border bg-gray-100">
          <img src={src} alt="Galería SID" class="h-56 w-full object-cover" loading="lazy" />
        </div>
      ))}
    </div>
  </section>

  <!-- ROADMAP -->
  <section class="py-10 space-y-6">
    <h2 class="font-poppins text-2xl text-sid-navy">Roadmap</h2>

    <div class="space-y-4">
      {roadmap.map((m) => (
        <div class="rounded-2xl border border-gray-200 bg-white p-6">
          <div class="font-poppins font-semibold text-lg text-sid-navy">{m.module}</div>
          <ul class="mt-3 list-disc pl-6 space-y-1 text-slate-700">
            {m.topics.map((t) => <li>{t}</li>)}
          </ul>
        </div>
      ))}
    </div>
  </section>

  <!-- RECURSOS -->
  <section id="recursos" class="py-10 space-y-6">
    <h2 class="font-poppins text-2xl text-sid-navy">Recursos</h2>

    <div class="space-y-3">
      {resources.map((r) => (
        <a
          href={r.url}
          target="_blank"
          rel="noopener noreferrer"
          class="block rounded-2xl border border-gray-200 bg-white p-5 hover:shadow-md transition"
        >
          <div class="font-semibold text-sid-blue">{r.label}</div>
        </a>
      ))}
    </div>
  </section>
</BaseLayout>
