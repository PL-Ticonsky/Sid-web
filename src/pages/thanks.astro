---
import BaseLayout from "../layouts/BaseLayout.astro";
const BASE = import.meta.env.BASE_URL;
---

<BaseLayout title="SID · Enviado">
  <section class="mx-auto max-w-2xl px-4 py-16 text-center">
    <h1 class="font-poppins text-3xl mb-3">¡Listo!</h1>
    <p class="text-gray-600 mb-8">
      Recibimos tu inscripción. Te contactaremos pronto al correo institucional.
    </p>

    <a
      href={BASE}
      class="inline-flex items-center justify-center rounded-xl bg-[#181D36] px-5 py-3 font-semibold text-white hover:opacity-90"
    >
      Volver al inicio
    </a>
  </section>
</BaseLayout>
